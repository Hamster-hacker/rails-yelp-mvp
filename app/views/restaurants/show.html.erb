<h1 class="text-center my-4"> <%= @restaurant.name %> </h1>

<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <p><strong>Address: </strong><%= @restaurant.address %></p>
      <p><strong>Category: </strong><%= @restaurant.category.capitalize %></p>
      <p><strong>Phone number:</strong> +<%= @restaurant.phone_number %></p>
    </div>
  </div>

  <!-- Reviews List -->
  <div class="reviews-section mb-4">
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item rounded shadow-sm p-4 mb-3">
          <div class="review-header d-flex justify-content-between mb-3">
            <span class="review-rating">
              <strong>Rating:</strong> <%= review.rating %>/5
            </span>
            <span class="text-muted"><%= time_ago_in_words(review.created_at) %> ago</span>
          </div>
          <div class="review-content">
            <p><%= review.content %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>


  <div class="d-flex justify-content-between">
    <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to "Back to Restaurants", root_path, class: "btn btn-secondary" %>
  </div>
</div>
